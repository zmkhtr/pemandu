<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#2b6c35" />
            <gradient android:angle="-90" android:startColor="#d2b38c" android:endColor="#3a7432"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#4ca43e" />
            <solid android:color="#52a45d"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#28612f" />
            <gradient android:angle="-90" android:startColor="#237424" android:endColor="#2d7e31" />
        </shape>
    </item>
</selector>